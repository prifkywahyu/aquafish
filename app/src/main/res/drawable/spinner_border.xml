<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item>
                <shape>
                    <stroke
                        android:width="1dp"
                        android:color="@android:color/black"/>

                    <corners
                        android:radius="10dp"/>

                    <padding
                        android:top="5dp"
                        android:bottom="5dp"
                        android:right="7dp"
                        android:left="7dp"/>
                </shape>
            </item>

            <item>
                <bitmap
                    android:src="@drawable/sort_down"
                    android:gravity="right|center"/>
            </item>
        </layer-list>
    </item>
</selector>
